  "homepage": "https://github.com/daniNKV/pokedex#readme",
  "devDependencies": {
    "cypress": "^12.7.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.2.7"
  }
